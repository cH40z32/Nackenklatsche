<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/game-setup.css" />
		
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/game-setup.js" />
	</scripts>
	<Panel  class="GameSetupPanel" style="flow-children: down; overflow: squish scroll;">
	  <Label class="header" text="Game Settings" />

	  <Button id="SaveButton" onactivate="Save()">
		<Label text="Apply" />
	  </Button>
	  
	  <Panel class="Paragraph">
		 <Label text="Respawn Time:" />
		 <DropDown oninputsubmit="OnDropDownChanged()">
		  <Label text="Standard" id="Standard"/>
		  <Label text="10" id="10"/>
		  <Label text="20" id="20"/>
		  <Label text="30" id="30"/>
		 </DropDown>
	  </Panel>
	  
	  
	 <Panel class="Paragraph">
		 <Label text="Starting Gold:" />
		 <DropDown oninputsubmit="OnDropDownChanged()">
		  <Label text="Standard" id="Standard"/>
		  <Label text="500" id="500"/>
		  <Label text="1000" id="1000"/>
		  <Label text="2000" id="2000"/>
		  <Label text="5000" id="5000"/>
		  <Label text="10000" id="10000"/>
		 </DropDown>
	  </Panel>
	  
	  
	  <Panel class="Paragraph">
		 <Label text="Starting Level:" />
		 <DropDown oninputsubmit="OnDropDownChanged()">
		  <Label text="1" id="1"/>
		  <Label text="2" id="2"/>
		  <Label text="3" id="3"/>
		  <Label text="4" id="4"/>
		  <Label text="5" id="5"/>
		  <Label text="6" id="6"/>
		  <Label text="7" id="7"/>
		  <Label text="8" id="8"/>
		  <Label text="9" id="9"/>
		  <Label text="10" id="10"/>
		  <Label text="11" id="11"/>
		  <Label text="12" id="12"/>
		  <Label text="13" id="13"/>
		  <Label text="14" id="14"/>
		  <Label text="15" id="15"/>
		  <Label text="16" id="16"/>
		  <Label text="17" id="17"/>
		  <Label text="18" id="18"/>
		  <Label text="19" id="19"/>

		 </DropDown>
	  </Panel>

	</Panel>
</root>